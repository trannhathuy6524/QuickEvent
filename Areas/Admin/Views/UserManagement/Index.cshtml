@model IEnumerable<QuickEvent.Areas.Admin.Models.UserManagementViewModel>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<style>
    .usermanagement-container {
        background-color: #F7F7F7;
        padding: 24px;
        border-radius: 16px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        max-width: 1200px;
        margin: 24px auto;
        font-family: Arial, sans-serif;
    }
    h1 {
        color: #FF385C;
        font-weight: 600;
        font-size: 32px;
        font-family: Arial, sans-serif;
        margin-bottom: 24px;
    }
    .table th {
        background-color: #F7F7F7;
        color: #222222;
        font-weight: 600;
        font-size: 14px;
        padding: 12px;
    }
    .table td {
        color: #222222;
        font-size: 14px;
        padding: 12px;
    }
    .btn-custom {
        border: 1px solid #222222;
        background-color: transparent;
        color: #222222;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        position: relative;
        font-size: 12px;
        transition: border-color 0.3s, color 0.3s;
        transform: scale(1.1);
        font-family: Arial, sans-serif;
        text-decoration: none;
        margin-right: 8px;
    }
    .btn-custom i {
        color: #222222;
        font-size: 13px;
        margin-right: 4px;
    }
    .btn-custom:hover {
        border-color: #FF385C;
        color: #FF385C;
    }
    .btn-custom:hover i {
        color: #FF385C;
    }
    .btn-custom .tooltip-text {
        visibility: hidden;
        background-color: #222222;
        color: #FFFFFF;
        text-align: center;
        border-radius: 6px;
        padding: 8px 12px;
        position: absolute;
        z-index: 1;
        bottom: -40px;
        font-size: 12px;
        white-space: nowrap;
    }
    .btn-custom:hover .tooltip-text {
        visibility: visible;
    }
    .text-success {
        color: #222222;
        font-family: Arial, sans-serif;
        font-size: 14px;
    }
</style>

<div class="usermanagement-container">
    <h1>Quản lý người dùng</h1>
    @if (TempData["Message"] != null)
    {
        <p class="text-success"><i class="bi bi-check-circle"></i> @TempData["Message"]</p>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Phân quyền</th>
                <th>Ngày đăng ký</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.UserType</td>
                    <td>@user.RegistrationDate.ToString("dd/MM/yyyy")</td>
                    <td>@(user.IsLocked ? "Khóa" : "Hoạt động")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-custom"><i class="bi bi-eye"></i><span class="tooltip-text">Xem chi tiết</span></a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-custom"><i class="bi bi-pencil"></i><span class="tooltip-text">Chỉnh sửa</span></a>
                        <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-custom"><i class="bi bi-key"></i><span class="tooltip-text">Đặt lại mật khẩu</span></a>
                        @if (user.IsLocked)
                        {
                            <a asp-action="Unblock" asp-route-id="@user.Id" class="btn btn-custom"><i class="bi bi-unlock"></i><span class="tooltip-text">Mở khóa tài khoản</span></a>
                        }
                        else
                        {
                            <a asp-action="Block" asp-route-id="@user.Id" class="btn btn-custom"><i class="bi bi-lock"></i><span class="tooltip-text">Khóa tài khoản</span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.btn-custom').forEach(btn => {
            btn.addEventListener('click', () => {
                btn.classList.add('animate__animated', 'animate__pulse');
                setTimeout(() => btn.classList.remove('animate__animated', 'animate__pulse'), 500);
            });
        });
    </script>
}