@model QuickEvent.Areas.Admin.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<style>
    .resetpassword-container {
        background-color: #F7F7F7;
        padding: 24px;
        border-radius: 16px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        max-width: 600px;
        margin: 24px auto;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #FF385C;
        font-weight: 600;
        font-size: 32px;
        font-family: Arial, sans-serif;
        margin-bottom: 24px;
    }

    .form-floating label {
        color: #FF385C;
        font-weight: 600;
        font-size: 14px;
    }

    .form-control {
        border: 1px solid #222222;
        border-radius: 8px;
        font-family: Arial, sans-serif;
        font-size: 16px;
        padding: 12px;
    }

    .btn-custom {
        border: 1px solid #222222;
        background-color: transparent;
        color: #222222;
        padding: 8px 16px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        position: relative;
        font-size: 14px;
        transition: border-color 0.3s, color 0.3s;
        transform: scale(1.1);
        font-family: Arial, sans-serif;
        text-decoration: none;
        margin-right: 8px;
    }

        .btn-custom i {
            color: #222222;
            font-size: 16px;
            margin-right: 4px;
        }

        .btn-custom:hover {
            border-color: #FF385C;
            color: #FF385C;
        }

            .btn-custom:hover i {
                color: #FF385C;
            }

        .btn-custom .tooltip-text {
            visibility: hidden;
            background-color: #222222;
            color: #FFFFFF;
            text-align: center;
            border-radius: 6px;
            padding: 8px 12px;
            position: absolute;
            z-index: 1;
            bottom: -40px;
            font-size: 12px;
            white-space: nowrap;
        }

        .btn-custom:hover .tooltip-text {
            visibility: visible;
        }

    .text-danger {
        font-family: Arial, sans-serif;
        font-size: 14px;
    }
</style>

<div class="resetpassword-container">
    <h1>Đặt lại mật khẩu</h1>
    <form asp-action="ResetPassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />
        <div class="form-floating mb-3">
            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Mật khẩu mới" />
            <label asp-for="NewPassword">Mật khẩu mới</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Xác nhận mật khẩu" />
            <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
            <div class="form-floating mb-3">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <btn type="submit" class="btn btn-custom"><i class="bi bi-key"></i> Đặt lại<span class="tooltip-text">Đặt lại mật khẩu</span>
        </div>
        <a asp-action="Index" class="btn btn-custom"><i class="text-success bi bi-arrow-left"></i> Quay lại<span class="tooltip-text">Quay lại danh sách</span></a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.btn-custom').forEach(btn => {
            btn.addEventListener('click', () => {
                btn.classList.add('animate__animated', 'animate__pulse');
                setTimeout(() => btn.classList.remove('animate__animated', 'animate__pulse'), 500);
            });
        });
    </script>
}